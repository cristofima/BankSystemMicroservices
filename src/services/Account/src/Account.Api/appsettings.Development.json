{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Username=postgres;Password=12345678;Database=DemoBank_Accounts;Trust Server Certificate=true"
  },
  "Cors": {
    "AllowedOrigins": ["https://localhost:55836", "http://localhost:55837"]
  },
  "Jwt": {
    "Key": "dev-secret-key-min-32-chars-for-hs256-algorithm",
    "Issuer": "https://localhost:5001",
    "Audience": "bank-system-api",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "Database": {
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true
  },
  "MassTransit": {
    "AzureServiceBus": {
      "ConnectionString": ""
    },
    "Retry": {
      "RetryLimit": 5,
      "InitialRetryIntervalSeconds": 1,
      "MaxRetryIntervalSeconds": 30,
      "RetryIntervalIncrementSeconds": 2
    },
    "CircuitBreaker": {
      "TripThreshold": 5,
      "ActiveThreshold": 5,
      "ResetIntervalMinutes": 5,
      "TrackingPeriodMinutes": 1
    },
    "Outbox": {
      "QueryDelaySeconds": 1,
      "DuplicateDetectionWindowMinutes": 30,
      "DisableInboxCleanupService": true
    }
  }
}
