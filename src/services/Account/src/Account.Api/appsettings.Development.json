{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "AzureServiceBus": "",
    "DefaultConnection": "Host=localhost;Username=postgres;Password=12345678;Database=DemoBank_Accounts;Trust Server Certificate=true"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:55836",
      "http://localhost:55837"
    ]
  },
  "Jwt": {
    "Key": "dev-secret-key-min-32-chars-for-hs256-algorithm",
    "Issuer": "https://localhost:5001",
    "Audience": "bank-system-api",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "Database": {
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true
  },
  "MassTransit": {
    "AzureServiceBus": {
      "ConnectionString": "",
      "Transport": {
        "DefaultTopicName": "bank-domain-events",
        "DefaultSubscriptionName": "service-subscription-dev",
        "EnablePartitioning": false,
        "RequiresSession": false,
        "MaxDeliveryCount": 5,
        "LockDurationMinutes": 5
      },
      "Retry": {
        "RetryLimit": 5,
        "InitialRetryIntervalSeconds": 1,
        "MaxRetryIntervalSeconds": 30,
        "RetryIntervalIncrementSeconds": 2
      },
      "Timeout": {
        "RequestTimeoutSeconds": 30,
        "MessageTimeToLiveMinutes": 1440
      },
      "Performance": {
        "PrefetchCount": 32,
        "ConcurrentMessageLimit": 16,
        "MaxConcurrentCalls": 16
      },
      "EnableCircuitBreaker": true,
      "CircuitBreaker": {
        "TripThreshold": 5,
        "ActiveThreshold": 5,
        "ResetIntervalMinutes": 5,
        "TrackingPeriodMinutes": 1
      },
      "Development": {
        "UseInMemoryForDevelopment": false,
        "EnableDetailedLogging": true
      }
    }
  }
}